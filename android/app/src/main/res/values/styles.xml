<resources>

    <!-- 
         "NormalTheme" is your main, Material-based theme. 
         It's now used for both <application> and <activity>.
    -->
    <style name="NormalTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 
         "LaunchTheme" is optional. If you're using a dedicated launch/splash theme, 
         you can keep it, or remove it if you prefer a simpler approach. 
    -->
    <style name="LaunchTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- 
         StripePaymentAuthTheme - Required for Stripe authentication UI 
         This prevents crashes when handling Stripe payments. 
    -->
    <style name="StripePaymentAuthTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
